{
  "version": 2,
  "builds": [
    {
      "src": "backend/simple_server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/simple_server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DOMAIN": "propvet.taurusai.io"
  },
  "functions": {
    "backend/simple_server.js": {
      "maxDuration": 30
    }
  }
}